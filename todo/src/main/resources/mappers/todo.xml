<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="dev.koko.todo.repository.TodoRepository" >
    
    <select id="findAll" resultType="dev.koko.todo.entity.Todo">
        SELECT * FROM todo
    </select>

    <select id="findById" parameterType="String" resultType="dev.koko.todo.entity.Todo">
        SELECT * FROM todo WHERE id = #{id}
    </select>

    <insert id="save" parameterType="dev.koko.todo.entity.Todo">
        INSERT INTO todo (id, title, status, created_at, updated_at)
            VALUES (#{id, jdbcType=VARCHAR}, #{title}, #{status}, #{createdAt}, #{updatedAt})
    </insert>

    <delete id="removeById" parameterType="String">
        DELETE FROM todo WHERE id = #{id}
    </delete>
</mapper>